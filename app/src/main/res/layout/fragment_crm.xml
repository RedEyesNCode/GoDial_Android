<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"

    tools:context=".ui.fragments.FragmentCrm">
    <TextView
        android:layout_width="wrap_content"
        style="@style/BigTextView"
        android:layout_gravity="start"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"

        android:textColor="@color/black"
        android:text="UNDER DEVELOPMENT"
        android:fontFamily="@font/raleway_bold"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAllContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="All Contacts"
                app:chipCornerRadius="8dp"
                app:chipStrokeColor="@color/green_3"
                app:chipStrokeWidth="2dp"
                app:checkedIcon="@drawable/baseline_check_box_24"
                app:closeIconVisible="false" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chipMyContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="My Contacts"
                app:chipCornerRadius="8dp"
                app:chipStrokeColor="@color/green_3"
                app:chipStrokeWidth="2dp"
                app:checkedIcon="@drawable/baseline_check_box_24"
                app:closeIconVisible="false" />



        </com.google.android.material.chip.ChipGroup>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:src="@drawable/baseline_android_24"
            android:layout_weight="1"
            android:layout_alignParentTop="true"

            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@id/ivInfo"
            android:layout_height="@dimen/_20sdp"/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:src="@drawable/baseline_info_24"

            android:layout_weight="1"
            android:layout_alignParentTop="true"

            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@id/ivInfo"
            android:layout_height="@dimen/_20sdp"/>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/ic_contact_us"

        android:layout_height="@dimen/_160sdp"/>

    <TextView
        android:layout_width="wrap_content"
        style="@style/normalTextView"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"

        android:textColor="@color/black"
        android:text="Add Contacts"
        android:fontFamily="@font/raleway_bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        style="@style/smallTextView"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"

        android:textColor="@color/grey"
        android:text="Looks like you don't have any contacts in this list."
        android:fontFamily="@font/raleway_bold"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/raleway_semibold"
        android:id="@+id/btnLogin"
        android:layout_margin="@dimen/_8sdp"
        android:backgroundTint="@color/green_3"
        android:layout_gravity="center"

        android:drawableTint="@color/white"
        android:padding="@dimen/_15sdp"
        android:text="Add Contact"
        android:drawableStart="@drawable/baseline_group_add_24"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            style="@style/smallTextView"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"

            android:textColor="@color/grey"
            android:text="PREV"
            android:layout_alignParentStart="true"

            android:fontFamily="@font/raleway_bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            style="@style/smallTextView"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"

            android:textColor="@color/grey"
            android:text="NEXT"
            android:layout_alignParentEnd="true"

            android:fontFamily="@font/raleway_bold"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>